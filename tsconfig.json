{
  "compilerOptions": {
    "skipLibCheck": true,
    "target": "ES2022",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "./build",
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true    
  },
  "include": ["./src"],
  "exclude": ["node_modules"]
}